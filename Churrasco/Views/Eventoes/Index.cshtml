@model IEnumerable<Churrasco.Models.Evento>

@{
    ViewData["Cadastro"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bebida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmaConvidado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BebidaConvidado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bebida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmaConvidado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BebidaConvidado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>

        }
    </tbody>
</table>